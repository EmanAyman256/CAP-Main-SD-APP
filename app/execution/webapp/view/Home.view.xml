<mvc:View controllerName="execution.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>Execution Order}">
        <content>
            <VBox id="_IDGenVBox"  alignItems= "Center" justifyContent= "Center" width="100%"
                height="100%" class="sapUiSmallMargin">
                <VBox id="_IDGenVBox1"  justifyContent="Center"  class="homeBackgroundTitle">
                    <Label id="_IDGenLabel" text="Enter Sales Order Details"  showColon="true" textAlign="Center" class="myHomeTitle"/>
                </VBox>

                <VBox id="_IDGenVBox3" justifyContent="Start" class="sapUiSmallMargin">
                    <Label id="_IDGenLabel2" text="Document Number" showColon="true" textAlign="Begin"/>
                    <Input id="_IDGenInput1" width="200px" liveChange="onDocumentChange" />
                    <!--Combobox Instead of Select For Filter Option-->
                    <ComboBox id="_IDGenComboBox" items="{/Items}" selectedKey="{/ItemID}" required="true" width="200px" showSecondaryValues="true">
                        <core:Item id="_IDGenItem" key="{ItemID}" text="{ItemName}" />
                    </ComboBox>
                </VBox>

                <Button id="_IDGenButton" text="Next" icon="sap-icon://navigation-right-arrow" press="onNext"/>
            </VBox>
        </content>
    </Page>
</mvc:View>