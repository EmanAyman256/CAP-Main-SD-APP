<mvc:View
  controllerName="project1.controller.Example"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:m="sap.m">

  <m:Page title="Service Numbers">
    <m:content>
      <m:VBox>
        <m:Toolbar>
          <m:Title text="Manage Service Numbers" level="H2" />
          <m:ToolbarSpacer/>
          <m:Button text="Add" press=".onAdd"/>
          <m:Button text="Update" press=".onUpdate"/>
          <m:Button text="Delete" press=".onDelete"/>
        </m:Toolbar>

        <m:Table id="serviceNumbersTable"
                 mode="SingleSelectMaster"
                 items="{/ServiceNumbers}">
          <m:columns>
            <m:Column><m:Text text="Code"/></m:Column>
            <m:Column><m:Text text="Description"/></m:Column>
            <m:Column><m:Text text="Created By"/></m:Column>
          </m:columns>

          <m:items>
            <m:ColumnListItem>
              <m:cells>
                <m:Text text="{serviceNumberCode}" />
                <m:Text text="{description}" />
                <m:Text text="{createdBy}" />
              </m:cells>
            </m:ColumnListItem>
          </m:items>
        </m:Table>
      </m:VBox>
    </m:content>
  </m:Page>
</mvc:View>
